{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container row p-4 px-md-0">
        <div class="col-12 col-md-6 offset-md-1">
            <h1>Modifier mon profil</h1>

            {{ form_start(userForm) }}
                <div class="form-group">
                    <label for="registration_form_email" class="required"><i class="fa fa-at"></i> Adresse e-mail</label>
                    {{ form_widget(userForm.email, {'attr': {'class': userForm.email.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'}}) }}

                    <div class="invalid-feedback">
                        {{ form_errors(userForm.email) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="registration_form_firstName" class="required">Prénom</label>
                    {{ form_widget(userForm.firstName, {'attr': {'class': userForm.firstName.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'}}) }}

                    <div class="invalid-feedback">
                        {{ form_errors(userForm.firstName) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="registration_form_lastName" class="required">Nom</label>
                    {{ form_widget(userForm.lastName, {'attr': {'class': userForm.lastName.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'}}) }}

                    <div class="invalid-feedback">
                        {{ form_errors(userForm.lastName) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="registration_form_baseId" class="required">N° de licence FFCO</label>
                    {{ form_widget(userForm.baseId, {'attr': {'class': userForm.baseId.vars.errors|length > 0 ? 'form-control is-invalid' : 'form-control'}}) }}

                    <div class="invalid-feedback">
                        {{ form_errors(userForm.baseId) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
            {{ form_end(userForm) }}
        </div>
        <div class="col-12 col-md-4 offset-md-1 mt-4 mt-md-0">
            <h2>Déjà un compte ?</h2>
            <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
        </div>
    </div>
{% endblock %}
