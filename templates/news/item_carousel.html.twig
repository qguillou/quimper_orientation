{% if is_granted('view', entity) %}
<div role="listitem" class="carousel-item {{ loop.index0 == 0 ? 'active' }}">
    <img class="first-slide opacity-20" src="{{ asset(entity.image.name is not null ? 'images/' ~ entity.image.name : 'images/default.jpg') | imagine_filter('carousel_header') }}" alt="">
    <div class="container">
        <div class="carousel-caption text-left">
            <h1 class="text-primary">{{ entity.title }}</h1>
            <div class="text-white font-italic">
                Publié le {{ entity.createAt|format_datetime('full', 'medium', locale='fr') }}
                Modifié le {{ entity.updateAt|format_datetime('full', 'medium', locale='fr') }}
            </div>
            <p class="text-justify d-lg-none">{{ entity.content|striptags|u.truncate(255)|raw ~ '...' }}</p>
            <p class="text-justify d-none d-lg-block">{{ entity.content|striptags|u.truncate(500)|raw ~ '...' }}</p>
            <p>
                <a class="btn btn-primary" href="{{ path('pi_crud_show', {'type': 'news', 'id': entity.id}) }}" role="button">
                    Lire la suite
                </a>
                {% include '@PiCRUD/includes/admin_actions.html.twig' ignore missing %}
            </p>
        </div>
    </div>
</div>
{% endif %}
