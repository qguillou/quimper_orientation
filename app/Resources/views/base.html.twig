<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Quimper Orientation Coatarmor 29</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% stylesheets '@styles_css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    <link href="{{ asset( 'css/font-awesome.css' ) }}" rel="stylesheet" type="text/css" />


    {% block javascript %}
    <script src="{{ asset( 'js/jquery.js' ) }}"></script>
    <script src="{{ asset( 'js/bootstrap.js' ) }}"></script>
    <script src="{{ asset( 'js/bootstrap-tab.js' ) }}"></script>
    {% endblock %}
</head>

<body>
    {% block header %}
        {% if app.user != null and 'admin' in app.request.uri %}
            {% include ':Navbar:header_admin.html.twig' %}
        {% else %}
            {% include ':Navbar:header_default.html.twig' %}
        {% endif %}
    {% endblock %}

    <div>
        {% if image_bandeau is defined %}
            <div class="bandeau-opacity">
                <img class="bandeau" src="{{ image_bandeau }}" style="width: 100%; height:auto;"/>
            </div>
        {% endif %}

        <div class="container bandeau-titre">
            <div class="row">
                {% block title %}{% endblock %}
            </div>
        </div>
    </div>

    <div class="container content-container">
        <div class="row">
            {% block content %}{% endblock%}
        </div>
    </div>

</body>
<footer>
    {% include ':Navbar:footer.html.twig' %}
</footer>
</html>
