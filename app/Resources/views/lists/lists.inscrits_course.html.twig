<!--
  lists.inscrits_course.html.twig
  Display a list of inscrits

  @param $course AppBundle\Entity\Course
!-->

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Nom</th>
      <th>Prénom</th>
      <th>Circuit</th>
      <th>Commentaire</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {% set i = 0 %}
    {% for inscrit in course.inscrits %}
    {% set i = i + 1 %}
    <tr {% if sizeof(course.circuits) > 0 and inscrit.circuit == null %}class="warning"{% endif %}>
      <td>{{i}}</td>
      <td>{{inscrit.nom}}</td>
      <td>{{inscrit.prenom}}</td>
      <td>{% if inscrit.circuit != null %}{{inscrit.circuit.nom}}{% else %}Non sélectionné{% endif %}</td>
      <td>{{inscrit.commentaire}}</td>
      <td>
        {% if app.user == inscrit.user %}
        <a href="{{ path('course_delete_inscrit', { 'id': inscrit.id, 'course': course.id }) }}"><i class="fa fa-times" style="color: red;cursor:pointer;"></i></a>
        {% endif %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
