{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <fieldset>
		<legend>Se connecter sur le site</legend>
    	{{ form_errors(form) }}

	    <div class="row">
		    <div class="form-group">
		    	{{ form_label(form.username, "Pseudo", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		    	<div class="col-sm-4">
		        	{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
		        	{{ form_errors(form.username) }}
		      	</div>
			</div>
		</div>

		<div class="row">
		    <div class="form-group">
		    	{{ form_label(form.plainPassword, "Mot de passe", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

		    	<div class="col-sm-4">
		        	{{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
		        	{{ form_errors(form.plainPassword) }}
		      	</div>
			</div>
		</div>

	    <div class="row">
	    	<button class="btn btn-success" type="submit">Se connecter</button>
	    </div>
	</fieldset>
{{ form_end(form) }}
{% endblock %}
