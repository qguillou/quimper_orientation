<!--
forms.inscrits_user_update.html.twig
A form component
Form for update inscrits

@param $form AppBundle\Form\Type\User
!-->

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
<fieldset>
  {{ form_errors(form) }}

  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>#</th>
        <th>Nom</th>
        <th>Pr√©nom</th>
        <th>Puce</th>
        <th>Circuit</th>
        <th>Commentaire</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% set i = 0 %}
      {% for inscrit in form.inscrits %}
      {% set i = i + 1 %}
      <tr class="{% if inscrit.puce.vars.errors | length %}warning{% endif %}">
        <td>{{i}}</td>
        <td>{{ form_widget(inscrit.nom, {'attr': {'class': 'form-control'}}) }}</td>
        <td>{{ form_widget(inscrit.prenom, {'attr': {'class': 'form-control'}}) }}</td>
        <td>{{ form_widget(inscrit.puce, {'attr': {'class': 'form-control'}}) }}</td>
        <td>{{ form_widget(inscrit.circuit, {'attr': {'class': 'form-control'}}) }}</td>
        <td>{{ form_widget(inscrit.commentaire, {'attr': {'class': 'form-control'}}) }}</td>
        <td>
          <a href="">
            <i class="fa fa-2x fa-times" style="color: red;cursor:pointer;"></i>
          </a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <div class="row">
    {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
  </div>
</fieldset>
{{ form_widget(form, {'attr': {'class': 'hidden'}}) }}
{{ form_end(form) }}
