<!--
forms.inscrits_user_update.html.twig
A form component
Form for update inscrits

@param $form AppBundle\Form\Type\User
!-->

{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
<fieldset>
  {{ form_errors(form) }}

  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>#</th>
        <th>Course</th>
        <th>Nom</th>
        <th>Pr√©nom</th>
        <th>Puce</th>
        <th>Circuit</th>
        <th>Commentaire</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% set i = 0 %}
      {% for inscrit in form.inscrits %}
      {% set i = i + 1 %}
      <tr class="{% if inscrit.puce.vars.errors | length %}warning{% endif %}">
        <td>{{i}}</td>
        <td> {{ inscrit.vars.data.course.nom }} </td>
        <td>{{ form_widget(inscrit.nom) }}</td>
        <td>{{ form_widget(inscrit.prenom) }}</td>
        <td>{{ form_widget(inscrit.puce) }}</td>
        
        <td>
          <select id="inscrit_update_inscrits_{{i - 1}}_circuit" name="inscrit_update[inscrits][{{i - 1}}][circuit]" class="form-control">
            <option value=""></option>
            {% for choice in inscrit.vars.data.course.circuits %}
                <option value="{{ choice.id }}" {% if inscrit.vars.data.circuit != null and choice == inscrit.vars.data.circuit %} selected="selected"{% endif %}>
                  {{ choice.nom }}
                </option>
            {% endfor %}
          </select>
        </td>
        <td>{{ form_widget(inscrit.commentaire) }}</td>
        <td>
          <a href="{{ path('inscription_delete', { 'id': inscrit.id.vars.value }) }}">
            <i class="fa fa-2x fa-times" style="color: red;cursor:pointer;"></i>
          </a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <div class="row">
    {{ form_widget(form.reset) }}
    {{ form_widget(form.save) }}
  </div>
</fieldset>
{{ form_widget(form, {'attr': {'class': 'hidden'}}) }}
{{ form_end(form) }}
