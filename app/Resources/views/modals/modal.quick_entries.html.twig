<!--
  modal.quick_entries.html.twig
  A bootstrap modal component
  Display a form to register (current user) to an event

  @param $form AppBundle\Form\Type\InscritType
  @param $course AppBundle\Entity\Course

  @require to assign manually the event
  @require to assign manually the user
!-->

<div class="modal fade" id="ModalQuickEntries" tabindex="-1" role="dialog" aria-labelledby="ModalQuickEntriesTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h1 class="modal-title" id="ModalQuickEntriesTitle">S'inscrire à {{course.nom}}</h1>
        <p class="lead">
          Du {{strftime(course.date | date("Y-m-d H:i:s"), "%A %d %B à %H:%M:%S")}}
          <br>À {{course.lieu}}
        </p>
      </div>
      <div class="modal-body">
        <p class="lead">Vérifiez les informations ci-dessous et enregistrez !</p>
        {{ form_errors(form) }}
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>{{ form_label(form.nom)}}</th>
              <th>{{ form_label(form.prenom)}}</th>
              <th>{{ form_label(form.puce)}}</th>
              <th>{{ form_label(form.circuit)}}</th>
              <th>{{ form_label(form.commentaire)}}</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{{ form_widget(form.nom) }}</td>
              <td>{{ form_widget(form.prenom) }}</td>
              <td>{{ form_widget(form.puce) }}</td>
              <td>{{ form_widget(form.circuit) }}</td>
              <td>{{ form_widget(form.commentaire) }}</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        {{ form_widget(form.reset, {'attr': {'data-dismiss': "modal"}}) }}
        {{ form_widget(form.save) }}
      </div>
      {{ form_widget(form, {'attr': {'class': 'hidden'}}) }}
      {{ form_end(form) }}
    </div>
  </div>
</div>
