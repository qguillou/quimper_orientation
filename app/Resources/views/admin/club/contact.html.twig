{% extends 'base_admin.html.twig' %}

{% block body %}
<div class="col-md-12">
  <h1>Administration des contacts</h1>
</div>

<div class="col-md-3">
  <div class="list-group">
    <a href="/admin/club/contact/" class="list-group-item {% if form.vars.data.id == null %}active{% endif %}">
      <i class="fa fa-plus-circle"></i> Nouveau contact
    </a>
    {% for contact in contacts %}
    <a href="/admin/club/contact/{{contact.getId()}}/" class="list-group-item {% if form.vars.data.id == contact.getId() %}active{% endif %}">
      {{contact.getFonction()}}
    </a>
    {% endfor %}
  </div>
</div>

<div class="col-md-1">
</div>

<div class="col-md-6">
  <div class="row">

  {% include 'alerts/alerts.form_validation.html.twig' %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <fieldset>
      <h2>Modification du contact</h2>
      <p class="lead">N'oubliez pas d'enregistrer !</p>
      {{ form_errors(form) }}

      <div class="row">
        <div class="form-group">
          {{ form_label(form.fonction) }}

          <div class="col-sm-6">
            {{ form_widget(form.fonction) }}
            {{ form_errors(form.fonction) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.nom) }}

          <div class="col-sm-6">
            {{ form_widget(form.nom) }}
            {{ form_errors(form.nom) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.prenom) }}

          <div class="col-sm-6">
            {{ form_widget(form.prenom) }}
            {{ form_errors(form.prenom) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.mail) }}

          <div class="col-sm-6">
            {{ form_widget(form.mail) }}
            {{ form_errors(form.mail) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.adresse) }}

          <div class="col-sm-6">
            {{ form_widget(form.adresse) }}
            {{ form_errors(form.adresse) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.portable) }}

          <div class="col-sm-6">
            {{ form_widget(form.portable) }}
            {{ form_errors(form.portable) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.telephone) }}

          <div class="col-sm-6">
            {{ form_widget(form.telephone) }}
            {{ form_errors(form.telephone) }}
          </div>
        </div>
      </div>

      <div class="row">
        {{ form_widget(form.reset) }}
        {{ form_widget(form.save) }}
        {% if form.vars.data.id %}
        {{ form_widget(form.delete) }}
        {% endif %}
      </div>
    </fieldset>
    {{ form_widget(form, {'attr': {'class': 'hidden'}}) }}
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
