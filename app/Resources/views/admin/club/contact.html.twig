{% extends 'base_admin.html.twig' %}

{% block body %}
<div class="col-md-12">
  <h1>Administration des contacts</h1>
</div>

<div class="col-md-3">
  <div class="list-group">
    <a href="/admin/club/contact/" class="list-group-item {% if form.vars.data.id == null %}active{% endif %}">
      <i class="fa fa-plus-circle"></i> Nouveau contact
    </a>
    {% for contact in contacts %}
    <a href="/admin/club/contact/{{contact.getId()}}/" class="list-group-item {% if form.vars.data.id == contact.getId() %}active{% endif %}">
      {{contact.getFonction()}}
    </a>
    {% endfor %}
  </div>
</div>

<div class="col-md-1">
</div>

<div class="col-md-6">
  <div class="row">

    {% include 'template/messages.html.twig' %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <fieldset>
      <h2>Modification du contact</h2>
      <p class="lead">N'oubliez pas d'enregistrer !</p>
      {{ form_errors(form) }}

      <div class="row">
        <div class="form-group">
          {{ form_label(form.fonction, "Fonction", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

          <div class="col-sm-6">
            {{ form_widget(form.fonction, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fonction) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

          <div class="col-sm-6">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.prenom, "Prénom", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

          <div class="col-sm-6">
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prenom) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.mail, "Adresse E-mail", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

          <div class="col-sm-6">
            {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.mail) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.adresse, "Adresse", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

          <div class="col-sm-6">
            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.adresse) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.portable, "N° mobile", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

          <div class="col-sm-6">
            {{ form_widget(form.portable, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.portable) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.telephone, "N° Téléphone", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

          <div class="col-sm-6">
            {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.telephone) }}
          </div>
        </div>
      </div>

      <div class="row">
        <button class="btn btn-default" type="reset">Annuler</button>
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
        {% if form.vars.data.id %}
        <button class="btn btn-danger" type="submit">Supprimer le contact</a>
        {% endif %}
      </div>
    </fieldset>
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
