{% extends 'base_admin.html.twig' %}

{% block body %}
<div class="col-md-12">
  <h1>Administration des parcours permanent</h1>
</div>
<div class="col-md-3">
  <div class="list-group">
    <a href="/admin/parcours/" class="list-group-item {% if form.vars.data.id == null %}active{% endif %}">
      <i class="fa fa-plus-circle"></i> Nouvelle carte
    </a>
    {% for carte in cartes %}
    <a href="/admin/parcours/{{carte.id}}/" class="list-group-item {% if form.vars.data.id == carte.id %}active{% endif %}">
      {{carte.nom}}
    </a>
    {% endfor %}
  </div>
</div>

<div class="col-md-1">
</div>

<div class="col-md-6">
  <div class="row">

  {% include 'alerts/alerts.form_validation.html.twig' %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <fieldset>
      <h2>Modification de la carte</h2>
      <p class="lead">N'oubliez pas d'enregistrer ! Si vous ne sélectionnez aucun fichier, l'ancien sera préservé.</p>
      {{ form_errors(form) }}

      <div class="row">
        <div class="form-group">
          {{ form_label(form.nom) }}

          <div class="col-sm-6">
            {{ form_widget(form.nom) }}
            {{ form_errors(form.nom) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.file) }}

          <div class="col-sm-6">
            {{ form_widget(form.file) }}
            {{ form_errors(form.file) }}
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          {{ form_label(form.alert) }}
          <div class="col-sm-6 material-switch">
            {{ form_widget(form.alert) }}
            <label for="carte_alert" class="label-switch"></label>
            {{ form_errors(form.alert) }}
          </div>
        </div>
      </div>

      <div class="row">
        {{ form_widget(form.reset) }}
        {{ form_widget(form.save) }}
        {% if form.vars.data.id %}
        {{ form_widget(form.delete) }}
        {% endif %}
      </div>
    </fieldset>
    {{ form_widget(form, {'attr': {'class': 'hidden'}}) }}
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
