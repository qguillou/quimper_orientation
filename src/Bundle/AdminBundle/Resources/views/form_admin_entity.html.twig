{{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'form'}}) }}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>

    <h1 class="modal-title" id="ModalEdit">Ã‰dition</h1>
</div>

<div class="modal-body">
    {{ form_errors(form) }}

    {% for field in display_form_fields %}
    <div class="row">
        <div class="form-group">
            {{ form_label(attribute(form, field)) }}
            <div class="col-sm-9">
                {{ form_widget(attribute(form, field)) }}
                {{ form_errors(attribute(form, field)) }}
            </div>
        </div>
    </div>
    {% endfor %}
</div>

<div class="modal-footer">
    {{ form_widget(form.reset, {'attr': {'data-dismiss': "modal"}}) }}
    {{ form_widget(form.save) }}
</div>
{{ form_widget(form, {'attr': {'class': 'hidden'}}) }}
{{ form_end(form) }}

<script type="text/javascript">
    $("form").submit(function(event){
        event.preventDefault();
        $.ajax({
          url: "{{ path('admin_entity_save', {'entity_type': entity_type}) }}",
          data: $(this).serializeArray(),
          type: 'post',
          success: function(result) {
            $("#ModalEdit").modal('hide');
            $("#liste").html(result.table);
            $("#messages").html(result.messages);
          }
        });
    });
</script>
