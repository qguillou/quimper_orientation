{% extends '::base.html.twig' %}

{% block content %}


    <div class="col-md-9">
        <h1>Administration du site</h1>
        <p class="lead">
            Modification des paramètres de base du site, un rafraichissement de la page sera nécessaire.
        </p>

        {% include '::Message/message.html.twig' %}
    </div>

    <div class="col-md-9">
        {{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'form'}}) }}
        {{ form_errors(form) }}

        <ul class="nav nav-tabs">
            <li class="active"><a  href="#generale" data-toggle="tab">Générales</a></li>
            <li><a  href="#systeme" data-toggle="tab">Système</a></li>
            <li><a  href="#version" data-toggle="tab">Version</a></li>
        </ul>

        <div class="tab-content clearfix">
            <div class="tab-pane active" id="generale">
                {% include 'AdminBundle:Configuration:generale.html.twig' %}
            </div>
            <div class="tab-pane" id="systeme">
                {% include 'AdminBundle:Configuration:systeme.html.twig' %}
            </div>
            <div class="tab-pane" id="version">
                {% include 'AdminBundle:Configuration:version.html.twig' %}
            </div>
        </div>

        {{ form_widget(form.reset) }}
        {{ form_widget(form.save) }}
        {{ form_end(form) }}
    </div>

{% endblock %}
