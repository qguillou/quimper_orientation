{{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'form'}}) }}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>

    <h1 class="modal-title" id="ModalEdit">{% block modal_title %}{% endblock %}</h1>
</div>

<div class="modal-body">
    {{ form_errors(form) }}

    {% block modal_body %}{% endblock %}
</div>

<div class="modal-footer">
    {{ form_widget(form.reset, {'attr': {'data-dismiss': "modal"}}) }}
    {{ form_widget(form.save) }}
</div>
{{ form_widget(form, {'attr': {'class': 'hidden'}}) }}
{{ form_end(form) }}

<script type="text/javascript">
    $("form").submit(function(event){
        event.preventDefault();
        $.ajax({
          url: {% block path_add %}{% endblock %},
          data: $(this).serializeArray(),
          type: 'post',
          success: function(result) {
            $("#ModalEdit").modal('hide');
            $("#liste").html(result.table);
            $("#messages").html(result.messages);
          }
        });
    });
</script>
