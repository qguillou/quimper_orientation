{% extends '::base.html.twig' %}

{% block title %}
    {% include '::Navbar/title.html.twig' with {'title': "Les parcours permanents", 'subtitle': "Vous souhaitez vous entraîner ? Téléchargez le carte d'un de nos parcours permanents et partez à l'aventure !"} %}
{% endblock %}

{% block content %}
{% for carte in cartes %}
<div class="col-xs-6 col-lg-3">
  <div class="box">
    <div class="box-icon">
      <span class="fa fa-3x fa-map-o"></span>
    </div>
    <div class="info">
      <h2 class="text-center">{{carte.getNom()}}</h2>
      {% if carte.getAlert() %}
      <div class="alert alert-danger">
        Attention, ce parcours est actuellement en cours de modification.
      </div>
      {% endif %}
        <li>
          <b>Date de modification </b> <br/>Le {{carte.getDateModification() | date('d/m/Y à G:i')}}
        </li>
        <li>
          <b>Taille du fichier </b><br/>
        </li>
        <li>
          <b>Téléchargé </b><br/>{{carte.getNbTelechargement()}} fois
        </li>

      <a href="/parcours/{{carte.getId()}}" target="_BLANK" class="btn btn-success">
        <i class="fa fa-download"></i> Télécharger la carte
      </a>
    </div>
  </div>
</div>
{% endfor %}
{% endblock %}

{% block stylesheets %}
{% endblock %}
