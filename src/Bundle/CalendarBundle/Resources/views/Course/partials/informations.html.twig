<h2>{{ "course.informations" | trans }}</h2>
<ul class="text-list information" style="border-color:{{color}}">

  <li><i class="fa fa-calendar"></i> {{ "calendar.date" | trans }} <p class="lead" style="color:{{color}}; font-weight:bold">{{ course.date | format_datetime('d MMMM YYYY', 'fr', 'Europe/Paris') }}</p></li>

  {% if course.lieu %}
  <li><i class="fa fa-map-marker"></i> {{ "calendar.location" | trans }} <p class="lead" style="color:{{color}}; font-weight:bold">{{course.lieu}}</p></li>
  {% endif %}

  {% if course.type %}
  <li><i class="fa fa-tag"></i> {{ "calendar.type" | trans }} <p class="lead" style="color:{{color}}; font-weight:bold">{{course.type.nom}}</p></li>
  {% endif %}

  {% if course.organisateur %}
  <li><i class="fa fa-user"></i> {{ "calendar.organised.by" | trans }} <p class="lead" style="color:{{color}}; font-weight:bold">{{course.organisateur}}</p></li>
  {% endif %}

  <li><i class="fa fa-sign-in"></i> {{ "calendar.entries" | trans }}
    {% if course.inscription and not is_past(course.modification | date('Y-m-d H:i:s')) %}
    <p class="lead" style="color:{{color}}; font-weight:bold">{{ "calendar.entries.limit" | trans }} {{course.modification | format_datetime('d MMMM YYYY Ã  HH:mm:ss', 'fr', 'Europe/Paris')}}</p>
    {% elseif course.inscription %}
    <p class="lead" style="color:{{color}}; font-weight:bold">{{ "calendar.entries.ended" | trans }}</p>
    {% else %}
    <p class="lead" style="color:{{color}}; font-weight:bold">{{ "calendar.see.with.organisator" | trans }}</p>
    {% endif %}
  </li>

  {% if course.gps %}
  <li><i class="fa fa-location-arrow"></i> {{ "calendar.gps" | trans }} <p class="lead"  style="color:{{color}}; font-weight:bold">{{course.gps}}</p></li>
  {% endif %}
</ul>
